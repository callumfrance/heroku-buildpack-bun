#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>
# $HOME: /app

set -e

BUILD_DIR=${1:-.}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

# install bun
export BUN_INSTALL=$BUILD_DIR/.bun

# bun 1.0.5 seems to be broken
# ISSUE: https://discord.com/channels/876711213126520882/1161662999258480651/1161662999258480651
# SEE: https://bun.sh/docs/installation#installing
curl -fsSL https://bun.sh/install | bash -s "bun-v1.0.4"

# set environment variables
export PATH=$BUN_INSTALL/bin:$PATH
PROFILE_PATH="$BUILD_DIR/.profile.d/bun.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$HOME/.bun/bin:$PATH"' >>$PROFILE_PATH

set +e
